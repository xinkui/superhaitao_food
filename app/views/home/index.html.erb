          <%= link_to shipping_buyer_helps_path do %>
              <i class="icon-hand-right"></i>
              <span class="color-orange">从这里上手</span>
          <% end %>
        </div>
        <%= image_tag 'unify/aeroplane.png', class: 'aeroplane', alt: 'Aeroplane' %>
      </li>

      <li>
