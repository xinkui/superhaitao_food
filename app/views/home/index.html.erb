<% title '首页' %>

<div id="sequence-theme" class="sequence-inner">
  <div id="sequence">
    <%= image_tag 'unify/bt-prev1.png', class: 'prev', alt: 'Previous', style: 'display: inline;' %>
    <%= image_tag 'unify/bt-next1.png', class: 'next', alt: 'Next', style: 'display: inline' %>
