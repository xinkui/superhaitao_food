<% title '公告列表' %>

<div class="headline">
  <h3>公告列表</h3>
</div>


<%= link_to '新增公告', new_news_path, class: 'btn-u' %>

<br/><br/>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>标题</th>
    <th></th>
  </tr>

  <% @news.each do |news| %>
    <tr>
      <td><%= news.title %></td>
      <td>
        <%= link_to '显示', news, class: 'btn-u' %>
        <%= link_to '编辑', edit_news_path(news), class: 'btn-u' %>
        <%= link_to '删除', news, method: :delete, data: { confirm: '你确定吗?' }, class: 'btn-u' %>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate @news %>

<br>

<%= link_to '新增公告', new_news_path, class: 'btn-u' %>
