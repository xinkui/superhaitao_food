<head>
  <title>超级海淘 - <%= yield(:title) %></title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1" name="viewport">
  <%= stylesheet_link_tag 'application', :media => 'all' %>
  <%= stylesheet_link_tag 'superhaitao/' + params[:controller] unless (params[:controller].to_s.include? 'devise' or
          params[:controller].to_s.include? 'sessions') %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'superhaitao/' + params[:controller] unless (params[:controller].to_s.include? 'devise' or
          params[:controller].to_s.include? 'sessions') %>
  <%= javascript_include_tag 'unify/plugins/horizontal-parallax/horizontal-parallax' if controller.instance_of?(HomeController) %>
  <%= javascript_include_tag 'unify/plugins/horizontal-parallax/sequence.jquery-min' if controller.instance_of?(HomeController) %>
  <%= javascript_include_tag 'unify/plugins/bxslider/jquery.bxslider' %>
  <%= javascript_include_tag 'unify/plugins/flexslider/jquery.flexslider-min' %>
  <%= javascript_include_tag 'http://bdimg.share.baidu.com/static/api/js/share.js'%>
  <%= javascript_include_tag 'http://tjs.sjs.sinajs.cn/open/api/js/wb.js'%>


  <!--[if lt IE 9]>
      <%= javascript_include_tag 'ie/respond'%>
      <%= javascript_include_tag 'ie/html5shiv'%>
  <![endif]-->


  <%= favicon_link_tag%>
  <%= csrf_meta_tags %>
  <!--google analytics script-->
  <% if Rails.env.production? %>
      <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
              (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-44531666-2', 'superhaitao.com', {'cookieDomain': 'superhaitao.com', 'siteSpeedSampleRate': 100});
          ga('require', 'displayfeatures');
          ga('send', 'pageview');

      </script>
  <% end %>

</head>