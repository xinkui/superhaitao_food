              <li>
                <%= link_to shipping_protocol_shipping_buyer_helps_path do %>
                    <i class="icon-book"></i>
                    <span>转运协议</span>
                <% end %>
              </li>

              <li>
                <%= link_to point_guide_shipping_buyer_helps_path do %>
                    <i class="icon-money"></i>
                    <span>积分说明</span>
                <% end %>
              </li>
              <li>
                <%= link_to tax_guide_shipping_buyer_helps_path do %>
                    <i class="icon-dollar"></i>
                    <span>如何减少被税</span>
                <% end %>
              </li>

              <li>
                <%= link_to embargo_list_shipping_buyer_helps_path do %>
                    <i class="icon-exclamation"></i>
                    <span>禁运货品清单</span>
                <% end %>
              </li>

            </ul>
