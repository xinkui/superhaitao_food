              </li>
              <li>
                <%= link_to price_guide_shipping_buyer_helps_path do %>
                    <i class="icon-plane"></i>
                    <span>运费说明</span>
                <% end %>
              </li>

              <li>
                <%= link_to package_guide_shipping_buyer_helps_path do %>
                    <i class="icon-paper-clip"></i>
                    <span>包装套餐说明</span>
                <% end %>
