              <i class="icon-angle-down"></i>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to goods_guide_shipping_buyer_helps_path do %>
                    <i class="icon-credit-card"></i>
                    <span>推荐货品导购</span>
                <% end %>
              </li>
              <li>
                <%= link_to shopping_guide_shipping_buyer_helps_path do %>
                    <i class="icon-eye-open"></i>
                    <span>欧洲主要网站导购</span>
