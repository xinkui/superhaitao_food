<div class="header">
  <div class="navbar navbar-default" role="navigation">
    <div class="container">

      <%= render :partial => 'shared/logo' %>



      <div>

        <ul class="nav navbar-nav navbar-right">

          <li>
            <%= link_to root_path do %>
                <i class="icon-home"></i>
                <span>首页</span>
            <% end %>
          </li>

          <li>
            <%= link_to shipping_buyer_items_path do %>
                <i class="icon-shopping-cart"></i>
                <span>我的货品(<%= Item.count_new_items_by_user(current_user) %>)</span>
                <span id="cart_quantity"></span>
            <% end %>
          </li>

          <li>
            <%= link_to shipping_buyer_orders_path do %>
                <i class="icon-tasks"></i>
                <span>我的订单</span>
            <% end %>
          </li>



