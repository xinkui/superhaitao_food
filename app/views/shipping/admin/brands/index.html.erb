<% title '品牌列表' %>

<div class="headline">
  <h3>品牌列表</h3>
</div>

<%= link_to '新增品牌', new_shipping_admin_brand_path, class: 'btn-u' %>

<br/><br/>

<table class="table table-striped table-bordered table-hover">
    <tr>
      <th>中文名</th>
      <th>英文名</th>
      <th>备注</th>
      <th></th>
    </tr>

    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name_cn %></td>
        <td><%= brand.name_en %></td>
        <td><%= brand.remark %></td>
        <td>
          <%= link_to '显示', shipping_admin_brand_path(brand), class: 'btn-u' %>
          <%= link_to '编辑', edit_shipping_admin_brand_path(brand), class: 'btn-u' %>
          <%= link_to '删除', shipping_admin_brand_path(brand), method: :delete, data: { confirm: '你确定吗?' }, class: 'btn-u' %>
        </td>
      </tr>
    <% end %>
</table>
<%= will_paginate @brands %>

<%= link_to '新增品牌', new_shipping_admin_brand_path, class: 'btn-u' %>
