<% title '列别列表' %>

<div class="headline">
  <h3>货品类别列表</h3>
</div>

<%= link_to '新增货品类别', new_shipping_admin_category_path, class: 'btn-u' %>

<br/><br/>

<table class="table table-striped table-bordered table-hover">
    <tr>
      <th>中文名</th>
      <th>英文名</th>
      <th>备注</th>
      <th></th>
    </tr>

    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name_cn %></td>
        <td><%= category.name_en %></td>
        <td><%= category.remark %></td>
        <td>
          <%= link_to '显示', shipping_admin_category_path(category), class: 'btn-u' %>
          <%= link_to '编辑', edit_shipping_admin_category_path(category), class: 'btn-u' %>
          <%= link_to '删除', shipping_admin_category_path(category), method: :delete, data: { confirm: '你确定吗?' }, class: 'btn-u' %>
        </td>
      </tr>
    <% end %>
</table>
<%= will_paginate @categories %>

<%= link_to '新增货品类别', new_shipping_admin_category_path, class: 'btn-u' %>
