<% title '显示货品' %>

<div class="headline">
  <h3>显示货品</h3>
</div>

<p>
  <strong>所属用户:</strong>
  <%= @item.user.name %>
</p>

<p>
  <strong>国内转运公司:</strong>
  <%= @item.express_name_internal %>
</p>

<p>
  <strong>国内转运单号:</strong>
  <%= @item.express_no_internal %>
</p>

<p>
  <strong>货品重量:</strong>
  <%= @item.weight %>
</p>

<p>
  <strong>货品状态:</strong>
  <%= @item.get_state %>
</p>

<p>
  <strong>备注:</strong>
  <%= @item.remark %>
</p>

<p>
  <strong>上架货位:</strong>
  <%= @item.cargo_space %>
</p>

<div class="headline">
  <h3>sku信息</h3>
</div>

<p>
  <strong>sku编码:</strong>
  <%= @item.sku.try(:barcode) %>
</p>

<p>
  <strong>sku名称:</strong>
  <%= @item.sku.try(:name) %>
</p>

<p>
  <strong>长:</strong>
  <%= @item.sku.try(:length) %>(CM)
</p>

<p>
  <strong>宽:</strong>
  <%= @item.sku.try(:width) %>(CM)
</p>

<p>
  <strong>高:</strong>
  <%= @item.sku.try(:height) %>(CM)
</p>

<p>
  <strong>体积:</strong>
  <%= @item.sku.try(:volume) %>(CM²)
</p>

<p>
  <strong>实际重量:</strong>
  <%= @item.sku.try(:actual_weight) %>(KG)
</p>

<%= link_to '编辑', edit_shipping_admin_item_path(@item), :class => 'btn-u' %>
<%= link_to '查看货品列表', shipping_admin_items_path, :class => 'btn-u' %>
