<% title '重量列表' %>

<div class="headline">
    <h3>重量列表</h3>
</div>

<%= link_to '新增', new_shipping_admin_weight_path, :class => 'btn-u' %>

<br/><br/>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>重量</th>
    <th></th>
  </tr>

  <% @weights.each do |weight| %>
    <tr>
      <td><%= weight.weight %></td>
      <td>
        <%= link_to '显示', shipping_admin_weight_path(weight), :class => 'btn-u' %>
        <%= link_to '编辑', edit_shipping_admin_weight_path(weight), :class => 'btn-u' %>
        <%= link_to '删除', shipping_admin_weight_path(weight), method: :delete, data: { confirm: '你确定吗?' }, :class => 'btn-u' %>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate @weights %>

<%= link_to '新增', new_shipping_admin_weight_path, :class => 'btn-u' %>
