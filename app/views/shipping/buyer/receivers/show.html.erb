<% title '查看收件人' %>

<%- model_class = Receiver -%>
<div class="headline">
  <h3>查看收件人</h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @receiver.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:province) %>:</strong></dt>
  <dd><%= @receiver.province.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @receiver.city.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:district) %>:</strong></dt>
  <dd><%= @receiver.district.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @receiver.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip_code) %>:</strong></dt>
  <dd><%= @receiver.zip_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @receiver.phone %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              shipping_buyer_receivers_path, :class => 'btn-u btn-u-blue'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_shipping_buyer_receiver_path(@receiver), :class => 'btn-u' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              shipping_buyer_receiver_path(@receiver), :method => 'delete',
              :data => { :confirm => t("helpers.links.confirm") }, :class => 'btn-u btn-u-red' %>
</div>