                    boldNum: 2,
                    pic: "http://www.superhaitao.com/logo.png",
                    shortUrl: false,
                    hideMore: true
                }
            </script>
            <script type="text/javascript" src="http://v3.jiathis.com/code_mini/jia.js" charset="utf-8"></script>
            <!-- JiaThis Button END -->
          </div>
        </div>

        <div class="form-group point optional user_point">
          <label class="point optional col-md-4 control-label" for="user_point">
          </label>
          <div class="col-md-8">
              <h4>
                <i class="icon-hand-right"></i>
                <%= link_to '五分钟上手攻略', superhaitao_guide_shipping_buyer_helps_path, class: 'color-orange h4' %>
              </h4>
          </div>
        </div>

        <div class="col-md-12">
          <%= f.button :submit, '保存', :class => 'btn-u pull-right' %>
        </div>
      </div>
    </div>

    <div class="headline">
      <h3>代收—收货地址</h3>
