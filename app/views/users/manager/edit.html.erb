<% title '个人信息' %>

<%- model_class = User -%>

<% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, '错误') %>:</h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<div class="headline">
  <h3>个人信息</h3>
</div>

<%= simple_form_for @user, :url => '/users/manager/update' do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group email optional user_email">
          <label class="email optional col-md-4 control-label" for="user_email">
            <%= model_class.human_attribute_name(:email) %>
          </label>
          <div class="col-md-8">
            <label class="email optional control-label" id="user_email">
              <%= @user.email %>
            </label>
          </div>
        </div>

        <div class="form-group receipt_logo optional receipt_logo">
          <label class="receipt_logo optional col-md-4 control-label" for="receipt_logo">
            <%= model_class.human_attribute_name(:name) %>
          </label>
          <div class="col-md-8">
            <label class="receipt_logo optional control-label" id="receipt_logo">
              <%= @user.name %>
            </label>
          </div>
        </div>

        <%= f.input :phone %>

        <div class="form-group point optional user_point">
          <label class="point optional col-md-4 control-label" for="user_point">
            收件人
          </label>
          <div class="col-md-8">
            <%= link_to '收件人列表', shipping_buyer_receivers_path, {:class => 'btn-u'} %>
          </div>
        </div>

        <div class="form-group point optional user_point">
          <label class="point optional col-md-4 control-label" for="user_point">
            <%= model_class.human_attribute_name(:point) %>
          </label>
          <div class="col-md-8">
            <label class="point optional control-label" id="user_point">
              <%= @user.point %>
            </label>
          </div>
        </div>

        <%= f.input :weibo %>
        <%= f.input :weixin %>

        <div class="form-group point optional user_point">
          <label class="point optional col-md-4 control-label" for="user_point">
            分享到
          </label>

          <div class="col-md-8">
            <!-- JiaThis Button BEGIN -->
            <div class="jiathis_style_32x32">
              <a class="jiathis_button_weixin"></a>
              <a class="jiathis_button_tsina"></a>
            </div>


            <h4>
              &nbsp;&nbsp;
              <i class="icon-hand-right"></i>
              <%= link_to '完善并分享注册信息赚取积分', point_guide_shipping_buyer_helps_path, class: 'color-orange h4' %>
            </h4>

            <script type="text/javascript">
                var jiathis_config = {
                    url: "http://www.superhaitao.com",
